{% extends "themes/base_visitor.html.twig" %}


{% block title %}
	Contact
{% endblock %}

{% block description %}
	page de contact de l'entreprise Tables et Fleurs D'un Jour
{% endblock %}

{% block main %}
	<h1 class="text-center my-3 display-5">Contactez-moi
	</h1>
	<div class="container mt-4">
		{% include 'components/alert.html.twig' %}
		<div class="row">
			<div class="col-md-8 mx-auto">
				{{ form_start(form) }}
				<div class="row g-3">
					<div class="col-md-6">
						<label for="contact_form_firstName">Prénom</label>
						<div class="text-danger">{{ form_errors(form.firstName) }}</div>
						{{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="col-md-6">
						<label for="contact_form_lastName">Nom</label>
						<div class="text-danger">{{ form_errors(form.lastName) }}</div>
						{{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="col-md-6">
						<label for="contact_form_email">Email</label>
						<div class="text-danger">{{ form_errors(form.email) }}</div>
						{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="col-md-6">
						<label for="contact_form_phone">Téléphone</label>
						{{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="col-md-12">
						<label for="contact_form_message">Message</label>
						<div class="text-danger">{{ form_errors(form.message) }}</div>
						{{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': 6}}) }}
					</div>
				</div>
				<div class="mt-3">
					<input formnovalidate type="submit" class="btn btn-secondary" value="Envoyer">
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
