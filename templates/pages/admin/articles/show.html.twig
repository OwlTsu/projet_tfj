{% extends "themes/base_admin.html.twig" %}

{% block title %}Lire l'article num-{{article.id}}
{% endblock %}

{% block description %}Lire l'article num-{{article.id}}
{% endblock %}

{% block main %}

	<div class="container">
		<div class="text-center">
			<h1 class="text-center my-3 display-5">{{article.name}}</h1>

			<small>Créé le
				{{article.createdAt|date()}}</small>
			|
			<small>Modifié le
				{{article.updatedAt|date()}}</small>

		</div>
		<section class="hero rounded-4 p-4 p-md-5 mt-3 bg-white shadow-sm">
			<div class="row">
				<div class="col-md-5 order-md-2 d-flex jsutify-content-center align-items-center">
					{% if article.imageOne %}
						<img class="img-fluid" src="{{ vich_uploader_asset(article, 'imageOneFile') }}" alt="{{ article.name }}">
					{% endif %}

				</div>

				<div class="col-md-7 order-md-1 d-flex flex-column justify-content-evenly align-items-center">
					{{article.detail|nl2br}}
				</div>
			</div>
		{% endblock %}
