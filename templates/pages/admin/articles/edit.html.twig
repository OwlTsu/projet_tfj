{% extends "themes/base_admin.html.twig" %}

{% block title %}Nouvel article
{% endblock %}
{% block description %}Nouvel article
{% endblock %}

{% block jQuery %}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{% block select2 %}
	<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet"/>
	<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
	<script>
		$(document).ready(function () {
$('#articles_form_category').select2();
$('#articles_form_subCategory').select2();
});
	</script>
{% endblock %}

{% block main %}
	<h1 class="text-center my-3 display-5">Nouvel article</h1>

	<div class="container">
		<div class="row">
			<div class="col-md-10 mx-auto">
				{{ form_start(form, { 'attr': {'novalidate': 'novalidate'} }) }}

				<div class="mb-3">
					<label for="articles_form_name">Nom</label>
					<div class="text-danger">{{ form_errors(form.name) }}</div>
					{{ form_widget(form.name, {'attr': {'class':'form-control', 'autofocus':'autofocus'}}) }}
				</div>

				<div class="mb-3">
					<label for="articles_form_category">Catégorie</label>
					<div class="text-danger">{{ form_errors(form.category) }}</div>
					{{ form_widget(form.category, {'attr': {'class':'form-control'}}) }}
				</div>

				<div class="mb-3">
					<label for="articles_form_subCategory">Sous-catégorie</label>
					<div class="text-danger">{{ form_errors(form.subCategory) }}</div>
					{{ form_widget(form.subCategory, {'attr': {'class':'form-control'}}) }}
				</div>

				<div class="mb-3">
					<label for="articles_form_code">Code</label>
					<div class="text-danger">{{ form_errors(form.code) }}</div>
					{{ form_widget(form.code, {'attr': {'class':'form-control'}}) }}
				</div>

				<div class="mb-3">
					<label for="articles_form_detail">Détail</label>
					<div class="text-danger">{{ form_errors(form.detail) }}</div>
					{{ form_widget(form.detail, {'attr': {'class':'form-control', 'rows':8}}) }}
				</div>

				<div class="row">
					<div class="col-md-4 mb-3">
						<label for="articles_form_size">Taille</label>
						<div class="text-danger">{{ form_errors(form.size) }}</div>
						{{ form_widget(form.size, {'attr': {'class':'form-control'}}) }}
					</div>
					<div class="col-md-4 mb-3">
						<label for="articles_form_color">Couleur</label>
						<div class="text-danger">{{ form_errors(form.color) }}</div>
						{{ form_widget(form.color, {'attr': {'class':'form-control'}}) }}
					</div>
					<div class="col-md-4 mb-3">
						<label for="articles_form_price">Prix</label>
						<div class="text-danger">{{ form_errors(form.price) }}</div>
						{{ form_widget(form.price, {'attr': {'class':'form-control'}}) }}
					</div>
				</div>

				<hr>

				<div class="mb-3">
					<label for="articles_form_imageOneFile">Image principale</label>
					<div class="text-danger">{{ form_errors(form.imageOneFile) }}</div>
					{{ form_widget(form.imageOneFile, {'attr': {'class':'form-control'}}) }}
				</div>

				<div class="mb-3">
					<label for="articles_form_imageTwoFile">Image secondaire</label>
					<div class="text-danger">{{ form_errors(form.imageTwoFile) }}</div>
					{{ form_widget(form.imageTwoFile, {'attr': {'class':'form-control'}}) }}
				</div>

				<div class="mb-3">
					<label for="articles_form_imageThreeFile">Troisième image</label>
					<div class="text-danger">{{ form_errors(form.imageThreeFile) }}</div>
					{{ form_widget(form.imageThreeFile, {'attr': {'class':'form-control'}}) }}
				</div>

				<div class="text-center">
					<input formnovalidate type="submit" class="btn btn-primary" value="Sauvegarder">
				</div>

				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
